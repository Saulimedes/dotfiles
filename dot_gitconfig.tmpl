[user]
  name = {{ .user.name }}
  useConfigOnly = true
  email =  {{ .user.email }}
[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  sshCommand = ssh
  quotepath = false
  autocrlf = input
  editor = {{ .editor | quote }}
  ignorecase = false
  excludesfile = ~/.config/git/ignore
  attributesfile = ~/.gitattributes
  precomposeUnicode = true
  preloadIndex = true
  safecrlf = false
[push]
  default = current
  followTags = true
  autoSetupRemote = true
[submodule]
  recurse = true
[color]
  ui = always
  pager = true
[color "branch"]
  current = yellow bold
  local = green bold
  remote = cyan bold
[gc]
  auto = 256
[clean]
  requireForce = false
[tag]
  sort = version:refname
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold
  newNormal = green bold
  newHighlight = green bold
  whitespace = red reverse
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold
[pull]
  rebase = true
[fetch]
  prune = true
  recurseSubmodules = true
[rebase]
  autosquash = true
  instructionFormat = [%cn <%ce> %G?] %s
  autoStash = true
[help]
  autocorrect = 20
[log]
  decorate = auto
[alias]
  A = "add -A ."
  aa = "add --all"
  amend = "commit --amend --no-edit"
  c = "clone"
  clean = "clean -fdx"
  done = "!git push origin HEAD"
  force = "push --force"
  harder = "reset --hard"
  last = "log -1 HEAD --stat"
  lg1 = "log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative"
  lg2 = "log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative"
  lg3 = "!git --no-pager log -15 --reverse --oneline --decorate --all --pretty=tformat:'%C(bold blue)%h%C(reset) %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold yellow)- %cn%C(reset)'"
  lg4 = "log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%cD%C(reset) %C(bold green)(%cr)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)' --abbrev-commit"
  m = "merge"
  me = "config user.name"
  mail = "config user.email"
  open = "!f() { url=$(git remote get-url ${1:-origin} | sed 's/git@\\([^:]*\\):/https:\\/\\/\\1\\//' | sed 's/\\.git$//'); xdg-open \"$url\"; }; f"
  panic = "!tar cvf ../git_panic.tar *"
  permission-reset = !git diff -p -R --no-ext-diff --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
  publish = "push -u origin HEAD"
  repo = "!git remote -v | grep fetch | awk '{print $2}'"
  root = "rev-parse --show-toplevel"
  rev = "log --format='%H' -n 1"
  s = "status -sb ."
  se = "!git rev-list --all | xargs git grep -F"
  tags = "tag -l"
  undo = "reset --soft HEAD"
  unpush = "revert HEAD~1"
  wip = "!git add -A && git commit -m 'wip: work in progress'"
  pushsafe = "!git pull --rebase && git push"
  yoda = "push --force-with-lease"
  zip = "!git archive --format=zip -o latest.zip HEAD"
  # switch/restore (modern replacements for checkout/branch)
  sw = "switch"
  swc = "switch -c"
  rs = "restore"
  rss = "restore --staged"
  # remote helpers
  set-origin = "remote set-url origin"
  to-ssh = "!f() { url=$(git remote get-url ${1:-origin} | sed 's|https://\\([^/]*\\)/|git@\\1:|'); git remote set-url ${1:-origin} \"$url\"; echo \"Set to $url\"; }; f"
  to-https = "!f() { url=$(git remote get-url ${1:-origin} | sed 's/git@\\([^:]*\\):/https:\\/\\/\\1\\//'); git remote set-url ${1:-origin} \"$url\"; echo \"Set to $url\"; }; f"
[gpg]
  program = /usr/bin/gpg2
[diff]
  prompt = false
  mnemonicprefix = true
  indentHeuristic = true
[mergetool]
  keepBackup = false
  keepTemporaries = false
  writeToTemp = true
  prompt = false
[status]
  submoduleSummary = true
  relativePaths = true
[init]
  defaultBranch = main
